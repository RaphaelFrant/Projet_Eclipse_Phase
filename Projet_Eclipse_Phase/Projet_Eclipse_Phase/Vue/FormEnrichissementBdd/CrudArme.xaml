                    <Label x:Name="labVdModifArme" Content="VD :" HorizontalAlignment="Left" Margin="9,109,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtVdModifArme" HorizontalAlignment="Left" Height="29" Margin="51,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labModeModifArme" Content="Mod Arme:" HorizontalAlignment="Left" Margin="178,109,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtModeModifArme" HorizontalAlignment="Left" Height="29" Margin="267,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="93" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labChargModifArme" Content="Chargeur:" HorizontalAlignment="Left" Margin="381,109,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtChargeModifArme" HorizontalAlignment="Left" Height="29" Margin="461,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="60" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labPrixModifArme" Content="Prix:" HorizontalAlignment="Left" Margin="539,109,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtPrixModifArme" HorizontalAlignment="Left" Height="29" Margin="584,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="87" FontSize="14" FontWeight="Normal"/>
                    <Button x:Name="btnModifArme" Content="Enregistrer" HorizontalAlignment="Left" Margin="297,155,0,0" VerticalAlignment="Top" Width="91" FontSize="14" FontWeight="Normal" Height="33"/>
                </Grid>
            </GroupBox>


            <!--Boite de suppression d'arme-->
            <GroupBox x:Name="grpboxSupprArme" Header="Suppression d'arme" HorizontalAlignment="Left" Height="150" Margin="43,592,0,0" VerticalAlignment="Top" Width="696" FontWeight="Bold" FontSize="16">
                <Grid x:Name="gridSupprArme" HorizontalAlignment="Left" Height="110" Margin="0,9,-6,0" VerticalAlignment="Top" Width="690">
                    <Label x:Name="labChoixSupprArme" Content="Choisissez une arme à supprimer:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <ComboBox x:Name="cmbboxChoixSupprArme" HorizontalAlignment="Left" Margin="244,10,0,0" VerticalAlignment="Top" Width="227" FontSize="14" Height="29"/>
                    <TextBox x:Name="txtIdSupprArme" HorizontalAlignment="Left" Height="23" Margin="502,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="White"/>
                    <Label x:Name="labNomSupprArme" Content="Nom: " HorizontalAlignment="Left" Margin="20,61,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="txtNomSupprArme" HorizontalAlignment="Left" Height="23" Margin="75,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223" FontSize="14" FontWeight="Normal"/>
                    <Button x:Name="btnSupprArme" Content="Supprimer" HorizontalAlignment="Left" Margin="412,56,0,0" VerticalAlignment="Top" Width="141" FontSize="14" FontWeight="Normal" Height="39"/>
                </Grid>
            </GroupBox>
            <Button x:Name="RetourGestAppli" Content="Retour" HorizontalAlignment="Left" Height="39" Margin="313,763,0,0" VerticalAlignment="Top" Width="142" FontSize="16"/>
        </Grid>
    </ScrollViewer>
</Window>
