        mc:Ignorable="d"
        Title="CrudArme" Height="849.191" Width="800">
    <ScrollViewer>
        <Grid Width="772">
            <Label x:Name="labGestArme" Content="Gestion des Armes" HorizontalAlignment="Left" Margin="283,19,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="txtGestArme" HorizontalAlignment="Left" Margin="43,83,0,0" TextWrapping="Wrap" Text="Dans cette partie, vous pouvez créer, modifier ou supprimer les armes disponibles pour les personnages." VerticalAlignment="Top" FontSize="14"/>

