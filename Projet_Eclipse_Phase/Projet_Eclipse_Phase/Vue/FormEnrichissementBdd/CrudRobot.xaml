                    <TextBox x:Name="txtIdModifRob" HorizontalAlignment="Left" Height="23" Margin="518,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labNomModifRob" Content="Nom: " HorizontalAlignment="Left" Margin="8,53,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
