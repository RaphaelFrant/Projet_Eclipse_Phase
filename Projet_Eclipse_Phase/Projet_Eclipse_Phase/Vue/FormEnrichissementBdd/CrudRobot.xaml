                    <Label x:Name="labSystMobModifRob" Content="Système Mobilité:" HorizontalAlignment="Left" Margin="4,94,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtNbrePassModifRob" HorizontalAlignment="Left" Height="23" Margin="137,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labVdeModifRob" Content="Vitesse:" HorizontalAlignment="Left" Margin="341,97,0,0" VerticalAlignment="Top" FontSize="14"/>
