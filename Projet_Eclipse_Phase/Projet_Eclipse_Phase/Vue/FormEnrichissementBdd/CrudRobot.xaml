            <!--Boite de suppression de robots-->
            <GroupBox x:Name="grpboxSupprRob" Header="Suppression de robots" HorizontalAlignment="Left" Height="150" Margin="43,858,0,0" VerticalAlignment="Top" Width="696" FontWeight="Bold" FontSize="16">
                <Grid x:Name="gridSupprRob" HorizontalAlignment="Left" Height="110" Margin="0,9,-6,0" VerticalAlignment="Top" Width="690">
                    <Label x:Name="labChoixSupprRob" Content="Choisissez un robot à supprimer:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <ComboBox x:Name="cmbboxChoixSupprRob" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Width="244" FontSize="14" Height="29"/>
                    <TextBox x:Name="txtIdSupprRob" HorizontalAlignment="Left" Height="23" Margin="517,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="White"/>
                    <Label x:Name="labNomSupprRob" Content="Nom: " HorizontalAlignment="Left" Margin="20,61,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="txtNomSupprRob" HorizontalAlignment="Left" Height="23" Margin="75,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223" FontSize="14" FontWeight="Normal"/>
