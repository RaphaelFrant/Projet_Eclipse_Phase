                    <TextBox x:Name="txtNbrePassCreaRob" HorizontalAlignment="Left" Height="23" Margin="139,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="193" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labVdeCreaRob" Content="Vitesse:" HorizontalAlignment="Left" Margin="343,54,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtVdeCreaRob" HorizontalAlignment="Left" Height="23" Margin="408,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="72" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labVitMaxCreaRob" Content="Vitesse max:" HorizontalAlignment="Left" Margin="485,54,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtVitMaxCreaRob" HorizontalAlignment="Left" Height="23" Margin="582,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="77" FontSize="14" FontWeight="Normal"/>
                    <Label x:Name="labAmeCreaRob" Content="Améliorations:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="txtAmeCreaRob" HorizontalAlignment="Left" Height="128" Margin="121,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="555" FontSize="14" FontWeight="Normal"/>
